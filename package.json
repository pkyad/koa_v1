{
	"name": "koa-typescript-starter",
	"version": "1.1.0",
	"description": "A starter/seed for KOA2/TypeScript.",
	"main": "app.js",
	"scripts": {
		"start": "yarn build && node ./dist/index.js -r ts-node/register/transpile-only -r tsconfig-paths/register",
		"build": "eslint && tsc && tscpaths -p tsconfig.json -s ./ -o ./dist",
		"watch": "nodemon --watch 'app/**/*' -e ts --exec 'ts-node' -r tsconfig-paths/register ./app/app.ts",
		"lint": "tslint -c tslint.json -p tsconfig.json --force",
		"fix": "tslint -c tslint.json -p tsconfig.json --fix --force",
		"image:build": "docker build --tag koa-typescript-starter .",
		"image:run": "docker run --rm -ti -p 3000:3000 koa-typescript-starter",
		"test": "jest",
		"cover": "jest --coverage",
		"add-tables": "tsx scripts/add-models.ts",
		"docs": "jsdoc -c jsdoc.conf.json",
		"update-openapi-service": "openapi-generator-cli generate --generator-name typescript-fetch --additional-properties=typescriptThreePlus=true",
		"fetch-services": "tsx scripts/fetch-services.ts",
		"prepare": "husky install",
		"commitlint": "commitlint --edit",
		"changeset": "changeset",
		"gen-changelog": "changeset version"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pkyad/test3.git"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix",
			"tsc-files --noEmit"
		]
	},
	"engines": {
		"yarn": "^1.22.19",
		"node": ">=20.0.0 <20.5.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged --debug"
		}
	},
	"author": "David DiMaria",
	"license": "ISC",
	"dependencies": {
		"@koa/cors": "^4.0.0",
		"koa": "^2.14.2",
		"koa-body": "^6.0.1",
		"koa-bunyan-logger": "^2.1.0",
		"koa-router": "^12.0.0",
		"koa-static": "^5.0.0",
		"koa2-swagger-ui": "^5.8.0",
		"lodash": "^4.17.21",
		"node-fetch": "2",
		"pg": "^8.11.0",
		"prom-client": "^14.2.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.16"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@commitlint/config-conventional": "^17.6.5",
		"@inquirer/select": "^1.2.1",
		"@openapitools/openapi-generator-cli": "^2.6.0",
		"@pkyad/jslib1": "0.1.0",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/bunyan": "^1.8.8",
		"@types/jest": "^29.5.2",
		"@types/koa": "^2.13.6",
		"@types/koa-bunyan-logger": "^2.1.4",
		"@types/koa-router": "^7.4.4",
		"@types/koa-static": "^4.0.2",
		"@types/koa__cors": "^4.0.0",
		"@types/lodash": "^4.14.195",
		"@types/mute-stream": "^0.0.1",
		"@types/node": "^20.2.5",
		"@types/node-fetch": "^2.6.4",
		"@types/supertest": "^2.0.12",
		"@types/swagger-jsdoc": "^6.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.9",
		"better-docs": "^2.7.2",
		"clean-jsdoc-theme": "^4.2.7",
		"commitlint": "^17.6.5",
		"eslint": "^8.42.0",
		"eslint-config-standard-with-typescript": "^35.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsdoc": "^46.2.6",
		"eslint-plugin-n": "^16.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"jsdoc": "^4.0.2",
		"koa-async-validator": "^0.4.1",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"swagger-jsdoc": "^6.2.8",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"tsc-files": "^1.1.3",
		"tsconfig-paths": "^4.2.0",
		"tscpaths": "^0.0.9",
		"tsx": "^3.12.7",
		"typescript": "^5.1.3"
	}
}
