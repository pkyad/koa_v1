{
  "name": "koa-typescript-starter",
  "version": "1.0.3",
  "description": "A starter/seed for KOA2/TypeScript.",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "build": "npm run lint && node_modules/typescript/bin/tsc",
    "watch": "nodemon --watch 'app/**/*' -e ts --exec 'ts-node' ./app/app.ts",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --force",
    "fix": "node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --fix --force",
    "image:build": "docker build --tag koa-typescript-starter .",
    "image:run": "docker run --rm -ti -p 3000:3000 koa-typescript-starter",
    "test": "NODE_ENV=test mocha -r ts-node/register ./test/**/*.spec.js  && exit 0",
    "coverage": "NODE_ENV=test nyc --reporter=html --reporter=text mocha --exit -r ts-node/register ./test/**/*.spec.js",
    "coverage:coveralls": "NODE_ENV=test nyc --reporter=lcov --reporter=text-lcov mocha --exit -r ts-node/register ./test/**/*.spec.js | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddimaria/koa-typescript-starter.git"
  },
  "keywords": [
    "loyalty",
    "checkin",
    "petro"
  ],
  "author": "David DiMaria",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-bunyan-logger": "^2.1.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.8.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/chai": "^4.3.5",
    "@types/koa": "^2.13.6",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^4.0.0",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "koa-async-validator": "^0.4.1",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "excludes": [
      "**/*.d.ts",
      "./test/**/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
