{
  "name": "koa-typescript-starter",
  "version": "1.0.3",
  "description": "A starter/seed for KOA2/TypeScript.",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && node ./dist/index.js",
    "build": "npm run lint && node_modules/typescript/bin/tsc",
    "watch": "nodemon --watch 'app/**/*' -e ts --exec 'ts-node' ./app/app.ts",
    "lint": "node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --force",
    "fix": "node_modules/tslint/bin/tslint -c tslint.json -p tsconfig.json --fix --force",
    "image:build": "docker build --tag koa-typescript-starter .",
    "image:run": "docker run --rm -ti -p 3000:3000 koa-typescript-starter",
    "test": "jest",
    "cover": "jest --coverage",
    "add-tables": "rm app/models/*;tsx scripts/add-models.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pkyad/test3.git"
  },
  "author": "David DiMaria",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-bunyan-logger": "^2.1.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.8.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.16"
  },
  "devDependencies": {
    "@pkyad/jslib1": "0.1.0",
    "@types/bunyan": "^1.8.8",
    "@types/jest": "^29.5.2",
    "@types/koa": "^2.13.6",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^4.0.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.5",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "koa-async-validator": "^0.4.1",
    "node-fetch": "^3.3.1",
    "nodemon": "^2.0.22",
    "pg": "^8.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  }
}
